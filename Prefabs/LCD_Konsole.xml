<Prefab>
  <Name>LCD Konsole</Name>
  <Description>Geneigte Konsole mit LCD-Funktion</Description>

  <!-- Vanilla geneigte Konsole -->
  <BasePrefab>StructureConsoleLarge</BasePrefab>

  <!-- Stack -->
  <StackSize>5</StackSize>

  <!-- Research -->
  <Research>LCD Konsole</Research>

  <!-- Karten entfernen -->
  <RemoveComponent type="ProgrammableCardReader"/>
  <RemoveComponent type="Slot"/>

  <!-- LCD Display -->
  <AddComponent type="Display">
    <Lines>8</Lines>
    <FontSize>16</FontSize>
    <AllowWrite>true</AllowWrite>
  </AddComponent>

  <!-- Strom + Daten wie LCD -->
  <AddComponent type="PowerNetwork"/>
  <AddComponent type="LogicNetwork"/>
  <AddComponent type="DeviceNetwork"/>

  <!-- Titelzeile -->
  <AddComponent type="Script">
    <Class>LCDKonsoleTitleLock</Class>
  </AddComponent>
</Prefab>